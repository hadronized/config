#!/bin/sh
#
# This script allows to switch branches easily.

set -e

header="Select a branch to switch to"
autostash=0
flags=
while getopts "s" opt; do
  case $opt in
    s)
      autostash=1
      flags="-s $flags"
      ;;
  esac
done

choice=$(git branch | rg -v "^\*" | tr -d ' ' | sk \
  --height=20 \
  --layout reverse \
  --header="$header" \
  --prompt="Switch branch: "\
)
r=$?

[[ autostash -eq 1 ]] && git stash
[ $r = 0 ] && git switch $choice
